<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kanjiInfoDialogLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <TextView
        android:id="@+id/kanji"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/readings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kanji" />

    <TextView
        android:id="@+id/meaning"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/readings" />

    <TextView
        android:id="@+id/compound"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meaning" />

	<Spinner
        android:id="@+id/list_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/compound" />    
    
    <ImageView
        android:id="@+id/notecardButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/list_spinner"
        android:src="@drawable/lilybutton"
        android:text="@+string/notecard_button"
        android:textSize="10dp" />
    
	<ImageView
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/list_spinner"
        android:layout_toRightOf="@+id/notecardButton"
        android:src="@drawable/bizarrobutton"
        android:text="@+string/notecard_cancel"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/notecardButtonExpl"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center|top"
        android:layout_alignRight="@+id/notecardButton"
        android:layout_below="@+id/notecardButton"
        android:text="@string/notecard_button" />

    <TextView
        android:id="@+id/notecardCancelExpl"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center|top"
        android:layout_below="@+id/cancelButton"
        android:layout_toRightOf="@+id/notecardButtonExpl"
        android:text="@string/notecard_cancel" />
    


</RelativeLayout>